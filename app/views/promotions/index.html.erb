<center><h1>Promociones</h1></center>
<form class="form-search">
  <div class="input-append">
  <input type="text" id="busqueda" name="busqueda" placeholder= "Buscar por nombre"> 
  <button type="submit">Buscar</button>
  </div>
</form>  
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>client_id</th>
      <th>employee_id</th>
      <th>fecha</th>
      <th>medioComunicacion</th>
      <th>acuerdo</th>
      <th colspan="25"></th>
    </tr>
  </thead>
  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= link_to promotion.id, promotion_path(promotion) %></td>
        <td><%= promotion.client_id %></td>
        <td><%= promotion.employee_id %></td>
        <td><%= promotion.fecha %></td>
        <td><%= promotion.medioComunicacion %></td>
        <td><%= promotion.acuerdo %></td>
        <td><%=l promotion.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_promotion_path(promotion), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      promotion_path(promotion),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_promotion_path,
            :class => 'btn btn-primary' %>
