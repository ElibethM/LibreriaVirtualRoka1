<%- model_class = Promotion -%>
<div class="page-header">
  <h1>Ver Promociones</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
  <dd><%= @promotion.client_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @promotion.employee_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha) %>:</strong></dt>
  <dd><%= @promotion.fecha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:medioComunicacion) %>:</strong></dt>
  <dd><%= @promotion.medioComunicacion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:acuerdo) %>:</strong></dt>
  <dd><%= @promotion.acuerdo %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              promotions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_promotion_path(@promotion), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              promotion_path(@promotion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
