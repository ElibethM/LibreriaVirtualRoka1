<center><h1>Libros</h1></center>
<form class="form-search">
<div class="input-append">
<input type="text" id="search" name= "search" placeholder= "Buscar Libro">
<button type="submit">Buscar</button>
</div>
</form>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>isbn%</th>
      <th>titulo</th>
      <th>autor</th>
      <th>editorial</th>
      <th>precio</th>
      <th>existencias</th>
      <th colspan="25"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.id, book_path(book) %></td>
        <td><%= book.isbn %></td>
        <td><%= book.titulo %></td>
        <td><%= book.autor %></td>
        <td><%= book.editorial %></td>
        <td><%= book.precio %></td>
        <td><%= book.existencias %></td>
        <td><%=l book.created_at %></td>
        <td>
          <%= link_to t('.Editar', :default => t("helpers.links.Editar")),
                      edit_book_path(book), :class => 'btn btn-mini' %>
          <%= link_to t('.Eliminar', :default => t("helpers.links.Eliminar")),
                      book_path(book),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.nuevo', :default => t("helpers.links.nuevo")),
            new_book_path,
            :class => 'btn btn-primary' %>
