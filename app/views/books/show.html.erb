<%- model_class = Book -%>
<div class="page-header">
  <h1>Ver Libro</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:isbn) %>:</strong></dt>
  <dd><%= @book.isbn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
  <dd><%= @book.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:autor) %>:</strong></dt>
  <dd><%= @book.autor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:editorial) %>:</strong></dt>
  <dd><%= @book.editorial %></dd>
  <dt><strong><%= model_class.human_attribute_name(:precio) %>:</strong></dt>
  <dd><%= @book.precio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:existencias) %>:</strong></dt>
  <dd><%= @book.existencias %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.Regresar', :default => t("helpers.links.Regresar")),
              books_path, :class => 'btn'  %>
  <%= link_to t('.Editar', :default => t("helpers.links.Editar")),
              edit_book_path(@book), :class => 'btn' %>
  <%= link_to t('.Eliminar', :default => t("helpers.links.Eliminar")),
              book_path(@book),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
