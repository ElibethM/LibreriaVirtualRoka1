<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @employee.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:usuario) %>:</strong></dt>
  <dd><%= @employee.usuario %></dd>
  <dt><strong><%= model_class.human_attribute_name(:password) %>:</strong></dt>
  <dd><%= @employee.password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @employee.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direccion) %>:</strong></dt>
  <dd><%= @employee.direccion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefono) %>:</strong></dt>
  <dd><%= @employee.telefono %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meta) %>:</strong></dt>
  <dd><%= @employee.meta %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gerente) %>:</strong></dt>
  <dd><%= @employee.gerente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vendedor) %>:</strong></dt>
  <dd><%= @employee.vendedor %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_path(@employee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
