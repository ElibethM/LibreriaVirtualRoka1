<center><h1>Empleados</h1></center>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>nombre</th>
      <th>usuario</th>
      <th>password</th>
      <th>email</th>
      <th>direccion</th>
      <th>telefono</th>
      <th>meta</th>
      <th>gerente</th>
      <th>vendedor</th>
      <th colspan="25"></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.id, employee_path(employee) %></td>
        <td><%= employee.nombre %></td>
        <td><%= employee.usuario %></td>
        <td><%= employee.password %></td>
        <td><%= employee.email %></td>
        <td><%= employee.direccion %></td>
        <td><%= employee.telefono %></td>
        <td><%= employee.meta %></td>
        <td><%= employee.gerente %></td>
        <td><%= employee.vendedor %></td>
        <td><%=l employee.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_employee_path(employee), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      employee_path(employee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_employee_path,
            :class => 'btn btn-primary' %>
