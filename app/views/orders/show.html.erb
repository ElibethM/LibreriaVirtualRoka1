<%- model_class = Order -%>
<div class="page-header">
  <h1>Ver Pedido</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @order.employee_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
  <dd><%= @order.client_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fechaPedido) %>:</strong></dt>
  <dd><%= @order.fechaPedido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fechaParaEntregar) %>:</strong></dt>
  <dd><%= @order.fechaParaEntregar %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fechaEntrega) %>:</strong></dt>
  <dd><%= @order.fechaEntrega %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direccion) %>:</strong></dt>
  <dd><%= @order.direccion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cancelado) %>:</strong></dt>
  <dd><%= @order.cancelado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:enEspera) %>:</strong></dt>
  <dd><%= @order.enEspera %></dd>
  <dt><strong><%= model_class.human_attribute_name(:entregado) %>:</strong></dt>
  <dd><%= @order.entregado %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.Regresar', :default => t("helpers.links.Regresar")),
              orders_path, :class => 'btn'  %>
  <%= link_to t('.Editar', :default => t("helpers.links.Editar")),
              edit_order_path(@order), :class => 'btn' %>
  <%= link_to t('.Eliminar', :default => t("helpers.links.Eliminar")),
              order_path(@order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
