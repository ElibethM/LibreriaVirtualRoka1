<%= form_for @order, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :employee_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :employee_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :client_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :client_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fechaPedido, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fechaPedido, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fechaParaEntregar, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fechaParaEntregar, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fechaEntrega, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fechaEntrega, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :direccion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :direccion, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cancelado, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cancelado, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :enEspera, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :enEspera, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :entregado, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :entregado, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn' %>
  </div>
<% end %>
