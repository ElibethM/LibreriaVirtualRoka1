<center><h1>Pedidos</h1></center>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>employee_id</th>
      <th>client_id</th>
      <th>fechaPedido</th>
      <th>fechaParaEntregar</th>
      <th>fechaEntrega</th>
      <th>direccion</th>
      <th>cancelado</th>
      <th>enEspera</th>
      <th>entregado</th>
      <th colspan="25"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= order.employee_id %></td>
        <td><%= order.client_id %></td>
        <td><%= order.fechaPedido %></td>
        <td><%= order.fechaParaEntregar %></td>
        <td><%= order.fechaEntrega %></td>
        <td><%= order.direccion %></td>
        <td><%= order.cancelado %></td>
        <td><%= order.enEspera %></td>
        <td><%= order.entregado %></td>
        <td><%=l order.created_at %></td>
        <td>
          <%= link_to t('.editar', :default => t("helpers.links.editar")),
                      edit_order_path(order), :class => 'btn btn-mini' %>
          <%= link_to t('.Eliminar', :default => t("helpers.links.Eliminar")),
                      order_path(order),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.nuevo', :default => t("helpers.links.nuevo")),
            new_order_path,
            :class => 'btn btn-primary' %>
